<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imageViewBookCoverHistory"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_book_cover" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/textViewBookTitleHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/textViewBookAuthorHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author Name"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/textViewReservationDateHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reserved: YYYY-MM-DD"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/textViewDueDateHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due: YYYY-MM-DD"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/textViewReturnDateHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Returned: YYYY-MM-DD"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:visibility="gone"/> <!-- first hide -->

            <TextView
                android:id="@+id/textViewReservationStatusHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: En attente"
                android:textSize="14sp"
                android:textStyle="italic"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>