<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="?android:attr/selectableItemBackground">

<ImageView
android:id="@+id/imageViewBookCoverItem"
android:layout_width="80dp"
    android:layout_height="100dp"
    android:scaleType="centerCrop"
    android:layout_marginEnd="12dp"
    android:src="@drawable/ic_launcher_background" />

<LinearLayout
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:orientation="vertical">

<TextView
    android:id="@+id/textViewBookTitleItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:textStyle="bold"
    android:text="Book Title" />

<TextView
    android:id="@+id/textViewBookAuthorItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:text="Author Name" />

<TextView
    android:id="@+id/textViewBookCategoryItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="14sp"
    android:text="Category" />

<TextView
    android:id="@+id/textViewBookStatusItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="14sp"
    android:text="Status: Available"
    android:layout_marginTop="4dp"/>

<Button
    android:id="@+id/buttonReserveThisBook"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Reserve This Book"
    android:layout_marginTop="8dp"
    android:textSize="12sp"
    android:minHeight="48dp"
style="@style/Widget.MaterialComponents.Button.TextButton"/>
</LinearLayout>
    </LinearLayout>